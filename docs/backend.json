
{
  "entities": {
    "Ingredient": {
      "title": "Ingrediente",
      "description": "Un ingrediente approvato nella dispensa dell'utente",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "calories": { "type": "number" },
        "protein": { "type": "number" },
        "carbs": { "type": "number" },
        "fat": { "type": "number" }
      },
      "required": ["name", "calories", "protein", "carbs", "fat"]
    },
    "Meal": {
      "title": "Pasto",
      "description": "Un pasto registrato dall'utente",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "calories": { "type": "number" },
        "macros": {
          "type": "object",
          "properties": {
            "protein": { "type": "number" },
            "carbs": { "type": "number" },
            "fat": { "type": "number" }
          }
        },
        "timestamp": { "type": "string", "format": "date-time" },
        "type": { "type": "string", "enum": ["colazione", "pranzo", "cena", "spuntino"] },
        "image": { "type": "string" }
      },
      "required": ["name", "calories", "timestamp", "type"]
    },
    "ProgressEntry": {
      "title": "Progresso Fisico",
      "description": "Registrazione di peso e misure corporee",
      "type": "object",
      "properties": {
        "weight": { "type": "number", "description": "Peso in kg" },
        "waist": { "type": "number", "description": "Circonferenza vita in cm" },
        "bodyFat": { "type": "number", "description": "Percentuale di grasso corporeo" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["weight", "timestamp"]
    },
    "WaterLog": {
      "title": "Registro Acqua",
      "description": "Registrazione del consumo di acqua",
      "type": "object",
      "properties": {
        "amount": { "type": "number", "description": "Quantit√† in ml" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["amount", "timestamp"]
    },
    "UserProfile": {
      "title": "Profilo Utente",
      "description": "Dati personali e obiettivi dell'utente",
      "type": "object",
      "properties": {
        "tdeeGoal": { "type": "number" },
        "weight": { "type": "number" },
        "height": { "type": "number" },
        "age": { "type": "number" },
        "gender": { "type": "string", "enum": ["male", "female"] },
        "activityLevel": { "type": "number" },
        "dietStartDate": { "type": "string", "format": "date" },
        "dietEndDate": { "type": "string", "format": "date" }
      }
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": "#/backend/entities/UserProfile",
      "description": "Dati del profilo utente"
    },
    "/users/{userId}/ingredients/{ingredientId}": {
      "schema": "#/backend/entities/Ingredient",
      "description": "Lista ingredienti consentiti dell'utente"
    },
    "/users/{userId}/meals/{mealId}": {
      "schema": "#/backend/entities/Meal",
      "description": "Registro dei pasti dell'utente"
    },
    "/users/{userId}/progress/{progressId}": {
      "schema": "#/backend/entities/ProgressEntry",
      "description": "Storico peso e misure dell'utente"
    },
    "/users/{userId}/water/{waterId}": {
      "schema": "#/backend/entities/WaterLog",
      "description": "Registro consumo acqua giornaliero"
    }
  }
}
